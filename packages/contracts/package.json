{
  "name": "@product-mint/contracts",
  "version": "1.0.0",
  "description": "ProductMint Solidity contracts developed using Hardhat.",
  "scripts": {
    "test": "hardhat test",
    "test:watch": "nodemon -e js,ts,sol --watch contracts --watch test --watch ignition/modules --exec 'hardhat test'",
    "test:coverage": "hardhat coverage",
    "test:coverage:watch": "nodemon -e js,ts,sol --watch contracts --watch test --watch ignition/modules --exec 'hardhat coverage'",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "visualize": "hardhat ignition visualize ./ignition/modules/ProductMintSystem.ts",
    "node:local": "hardhat node",
    "deploy:local": "hardhat ignition deploy ./ignition/modules/ProductMintSystem.ts --network localhost",
    "deploy:ethereum-sepolia": "hardhat ignition deploy ./ignition/modules/ProductMintSystem.ts --network sepolia",
    "verify:ethereum-sepolia": "hardhat ignition verify chain-11155111 --include-unrelated-contracts",
    "deploy:mock-uniswap-v2-dynamic-token:ethereum-sepolia": "hardhat ignition deploy ./ignition/modules/tokens/mock/DeployMockUniswapV2DynamicToken.ts --network sepolia --parameters ./ignition/parameters/ethereum-sepolia.json",
    "deploy:base-sepolia": "hardhat ignition deploy ./ignition/modules/ProductMintSystem.ts --network baseSepolia",
    "verify:base-sepolia": "hardhat ignition verify chain-84532 --include-unrelated-contracts",
    "deploy:base-mainnet": "hardhat ignition deploy ./ignition/modules/ProductMintSystem.ts --network base",
    "verify:base-mainnet": "hardhat ignition verify chain-8453 --include-unrelated-contracts",
    "deploy:pass-metadata-v2:base-sepolia": "hardhat ignition deploy ./ignition/modules/UpgradePassMetadata.ts --network baseSepolia",
    "deploy:pass-metadata-v2:base-mainnet": "hardhat ignition deploy ./ignition/modules/UpgradePassMetadata.ts --network base",
    "deploy:renewal-processor:base-sepolia": "hardhat ignition deploy ./ignition/modules/RenewalProcessor.ts --network baseSepolia",
    "deploy:renewal-processor:base-mainnet": "hardhat ignition deploy ./ignition/modules/RenewalProcessor.ts --network base",
    "deploy:uniswap-v2-dynamic-router:base-mainnet": "hardhat ignition deploy ./ignition/modules/DeployUniswapV2DynamicRouter.ts --network base --parameters ./ignition/parameters/base-mainnet.json",
    "deploy:dynamic-weth-usdc:base-mainnet": "hardhat ignition deploy ./ignition/modules/tokens/uniswap-v2/DeployDynamicWETH_USDC.ts --network base --parameters ./ignition/parameters/base-mainnet.json",
    "deploy:mock-uniswap-v2-dynamic-token:base-sepolia": "hardhat ignition deploy ./ignition/modules/tokens/mock/DeployMockUniswapV2DynamicToken.ts --network baseSepolia --parameters ./ignition/parameters/base-sepolia.json",
    "deploy:migrate-manager-dynamic-pricing:base-mainnet": "hardhat ignition deploy ./ignition/modules/MigrateManagerDynamicPricing.ts --network base --parameters ./ignition/parameters/base-mainnet.json",
    "deploy:migrate-manager-dynamic-pricing:base-sepolia": "hardhat ignition deploy ./ignition/modules/MigrateManagerDynamicPricing.ts --network baseSepolia --parameters ./ignition/parameters/base-sepolia.json",
    "deploy:migrate-pass-attributes-sub-date:base-mainnet": "hardhat ignition deploy ./ignition/modules/MigratePassAttributesSubDate.ts --network base --parameters ./ignition/parameters/base-mainnet.json",
    "deploy:migrate-pass-attributes-sub-date:base-sepolia": "hardhat ignition deploy ./ignition/modules/MigratePassAttributesSubDate.ts --network baseSepolia --parameters ./ignition/parameters/base-sepolia.json"
  },
  "keywords": [
    "productmint",
    "ethereum",
    "payments",
    "web3",
    "onchain"
  ],
  "author": "@kodikraig",
  "license": "BUSL-1.1",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@openzeppelin/contracts": "^5.1.0",
    "dotenv": "^16.4.7",
    "hardhat": "^2.25.0",
    "hardhat-contract-sizer": "^2.10.0",
    "nodemon": "^3.1.9"
  },
  "private": true
}
